<!DOCTYPE html>
<html>
  <head>
    <title>ArticulateFinalProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/canvasjs/1.7.0/canvasjs.min.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top white-opacity">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" >
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if user_signed_in? %>
            <a class="navbar-brand" href="#"><%= current_user.first_name %></a>
          <% else %>
            <a class="navbar-brand" href="#">Articulate</a>
          <% end %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">

            <% if user_signed_in? %>
              <li class="onhover"><a href="/users/"<%= current_user.id %> >Home</a>
              <li class="onhover"><a href="/users/"<%= current_user.id %>"/speech_results" >History</a></li>
              <li class="onhover"><a href="/users/sign_out">Log Out</a></li>
            <% else %>
            <li class="onhover"><a href="/users/sign_in">Login</a></li>
            <li class="onhover"><a href="/users/sign_up">Register</a></li>
            <% end %>

          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
