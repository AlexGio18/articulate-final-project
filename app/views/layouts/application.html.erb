<!DOCTYPE html>
<html>
  <head>
    <title>ArticulateFinalProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top white-opacity">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" >
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            <a class="onhover navbar-brand" href="/">Articulate</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">

            <% if user_signed_in? %>
              <li class="onhover"><%= current_user.email %></li>
              <li class="onhover"><a href="/users/<%= current_user.id %>">Home</a>
              <li class="onhover"><a href="/users/<%= current_user.id %>/speech_results" >History</a></li>
              <li class="onhover">
                <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
              </li>
            <% else %>
            <li class="onhover"><a href="/users/sign_in">Login</a></li>
            <li class="onhover"><a href="/users/sign_up">Register</a></li>
            <% end %>

          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
