<!DOCTYPE html>
<html>
  <head>
    <title>ArticulateFinalProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/canvasjs/1.7.0/canvasjs.min.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top white-opacity">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" >
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if current_user.guest? %>
            <%= link_to('Articulate', destroy_user_session_path, :method => :delete, class: "onhover navbar-brand") %>
          <% else %>
            <a class="onhover navbar-brand" href="/">Articulate</a>
          <% end %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if current_user.guest? %>
              <li class="onhover">
                <%= link_to('Home', destroy_user_session_path, :method => :delete) %>
              </li>
              <li class="onhover"><a href="/users/sign_in">Login</a></li>
              <li class="onhover"><a href="/users/sign_up">Register</a></li>
            <% elsif !current_user.guest? %>
              <li class="nav-bar-align"><%="Hello,  #{current_user.first_name}"%></li>
              <li class="onhover"><a href="/profile">Home</a>
              <li class="onhover"><a href="/profile/history" >History</a></li>
              <li class="onhover">
                <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
